<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="22sp"
        android:text="Password Reset"
        android:layout_marginStart="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/leelawadee" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pw_reset_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter your email:"
                android:textSize="20sp"
                android:fontFamily="@font/leelawadee"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true">

            </TextView>

            <EditText
                android:id="@+id/email"
                android:layout_below="@+id/pw_reset_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/leelawadee"
                android:inputType="textEmailAddress"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/simple_box"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

            </EditText>
        </RelativeLayout>



    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/password_reset"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/leelawadee"
        android:textColor="@color/dullblack">

    </TextView>
</LinearLayout>
