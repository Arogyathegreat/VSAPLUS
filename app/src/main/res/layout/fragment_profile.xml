<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:background="@drawable/bg_nightsky">

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/profileImage"
            android:layout_width="110dip"
            android:layout_height="110dip"
            android:layout_centerInParent="true">
        </com.facebook.login.widget.ProfilePictureView>


        <ImageView
            android:id="@+id/fbuserprofile"
            android:layout_width="110dip"
            android:layout_height="110dip"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/userName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/leelawadee"
            android:gravity="center"
            android:text="@string/user_name"
            android:textColor="#FFFFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@null"
            android:contentDescription="Settings"
            android:src="@drawable/ic_settings" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_introduction"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/leelawadee"
            android:text="Introduction"
            android:textColor="#000000"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dullblack"
            android:alpha="0.3"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <EditText
            android:id="@+id/statusBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/leelawadee"
            android:hint="Let others know about you...."
            android:inputType="textMultiLine"
            android:textSize="18sp"
            android:background="@drawable/simple_box"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:gravity="start">

        </EditText>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1.6"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/leelawadee"
            android:text="Default Points"
            android:textSize="18sp"
            android:textColor="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dullblack"
            android:alpha="0.3"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/leelawadee"
            android:gravity="center"
            android:text="Score"
            android:textSize="35sp"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_weight="3.5">

        <TextView
            android:id="@+id/badges"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/leelawadee"
            android:text="Badges"
            android:textSize="18sp"
            android:textColor="#000000" />

        <View
            android:layout_below="@+id/badges"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dullblack"
            android:alpha="0.3"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="60dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="50dp"
                    android:padding="15dp"
                    android:src="@drawable/badge_diamond"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="85dp"
                    android:text="10"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:fontFamily="@font/leelawadee"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="50dp"
                    android:padding="15dp"
                    android:src="@drawable/badge_sun"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="85dp"
                    android:text="36"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:fontFamily="@font/leelawadee"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="50dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_ruby"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="85dp"
                    android:text="4"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:fontFamily="@font/leelawadee"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    </LinearLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>